<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".VowActivity">

    <include
        android:id="@+id/add_view_layout"
        layout="@layout/activity_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/add_published_layout"
        layout="@layout/activity_published"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/add_error_layout"
        layout="@layout/activity_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>