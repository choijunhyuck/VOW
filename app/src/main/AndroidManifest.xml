<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vowcompany.vow">

    <!-- Permission -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.vending.BILLING"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionbarTheme"
        android:usesCleartextTraffic="true">

        <!-- Activity -->
        <activity android:name=".entry.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".entry.InformationActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".see.SeeDetail"
            android:theme="@style/AppTheme"/>
        <activity android:name=".see.SeeTerms"
            android:theme="@style/AppTheme"/>
        <activity android:name=".entry.InitialLockKeyActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".VowActivity"/>
        <activity android:name=".OptionActivity"/>
        <activity android:name=".AddActivity"/>
        <activity android:name=".setting.SettingActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".setting.SettingLockKeyActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".setting.SettingInformationActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".LockKeyActivity"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>